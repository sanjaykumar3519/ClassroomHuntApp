<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity"
    android:padding="15dp"
    android:id="@+id/main_constraint">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_dark"
        android:textSize="40sp"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/display_un"/>
    <TextView
        android:id="@+id/display_un"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/b_1"
        android:background="@drawable/layout_bg"
        android:elevation="5dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:textSize="20sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/activity_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/display_un"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/support"/>

    <RelativeLayout
        android:id="@+id/support"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/support_layout"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/support"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textSize="23sp"
            />
        <TextView
            android:id="@+id/mail_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/b_1"
            android:text="@string/mail"
            android:padding="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textSize="20sp"
            android:layout_below="@+id/text_1"/>
        <ImageView
            android:id="@+id/mail_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mail"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/mail_us"
            android:layout_alignBottom="@+id/mail_us"
            android:layout_toEndOf="@+id/mail_us"
            android:contentDescription="@string/todo" />
        <Button
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Hide"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/undo"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="3dp"
        android:padding="10dp"
        android:visibility="invisible"
        android:background="@drawable/undo_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>