<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:elevation="5dp">
    <ImageView
        android:id="@+id/load_circle"
        android:layout_width="220dp"
        android:layout_height="329dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detecting"
        android:src="@drawable/hunt_circle" />

    <ImageView
        android:id="@+id/load_inside"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="@id/load_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/load_circle"
        android:src="@drawable/hunt_inside" />
    <TextView
        android:id="@+id/detecting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detecting"
        android:textSize="40sp"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:textColor="@color/red_dark"
        app:layout_constraintTop_toBottomOf="@+id/load_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>