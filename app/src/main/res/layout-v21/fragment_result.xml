<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <ImageView
        android:id="@+id/Bitmap_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/result_layout"
        android:layout_marginBottom="@dimen/b_1"
        android:contentDescription="@string/todo" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/res_border"
        app:layout_constraintTop_toTopOf="@id/Bitmap_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:textColor="@color/blue_dark"
        app:layout_constraintTop_toTopOf="@+id/result_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/approx"/>
    <TextView
        android:id="@+id/res_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:textColor="@color/red_dark"
        app:layout_constraintLeft_toRightOf="@+id/status"
        app:layout_constraintTop_toTopOf="@+id/status"
        app:layout_constraintBottom_toBottomOf="@+id/status"
        app:layout_constraintRight_toRightOf="@+id/result_layout"/>
    <TextView
        android:id="@+id/approx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/approx"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:textColor="@color/blue_dark"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:layout_constraintLeft_toLeftOf="@+id/status" />
    <TextView
        android:id="@+id/res_approx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:textColor="@color/red_dark"
        app:layout_constraintTop_toTopOf="@+id/approx"
        app:layout_constraintLeft_toRightOf="@+id/approx"
        app:layout_constraintBottom_toBottomOf="@+id/approx"
        app:layout_constraintRight_toRightOf="@+id/result_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>